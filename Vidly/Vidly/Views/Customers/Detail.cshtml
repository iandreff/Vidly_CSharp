@model Vidly.Models.Customer
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Customer Detail</h2>

    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered table-hover table-striped">
                <thead class="">
                    <tr class="info">
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <td>@Model.Name</td>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>